<html>
    <body>
        <div>
            <div> Register </div>
            <div> Username <input id="username" type="text"></input></div>
            <div> Email <input id="email" type="text"></input></div>
            <div> Password <input id="password" type="text"></input></div>
            <button id="registerButton"> Submit </button>
        </div>

        <script>
            document.getElementById("registerButton").addEventListener("click", () => {
                fetch("http://coolkids.cse356.compas.cs.stonybrook.edu/users/signup", {
                    method: "POST",
                    headers: {
                        'Accept': 'application/json',
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ name: document.getElementById("username").value, email: document.getElementById("email").value, password: document.getElementById("password").value }) })
            });

        </script>
    </body>
</html>